{
	"name": "SamuelZNewton E-Ink",
	"colors": {
		"editor.background": "#ffffff",
		"editor.foreground": "#000000",
        "list.activeSelectionIconForeground": "#fff",
		"editor.lineHighlightBorder": "#0004",
		//"editor.lineHighlightBackground": "#ff01",
        "editorWarning.foreground": "#dba800",
		"editorWhitespace.foreground": "#0005",
		"editorRuler.foreground": "#0005",
		"statusBarItem.remoteBackground": "#fff",
		"statusBarItem.remoteForeground": "#000"
	},
	"semanticHighlighting": true,
	"semanticTokenColors": {
		"keyword": {
			"foreground": "#a70083",
			"fontStyle": "bold"
		}
	},
	"tokenColors": [

		// Comments
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment",
				"string.quoted.docstring"
			],
			"settings": {
				"foreground": "#AAAAAA"
			}
		},
		{
			"name": "Docstrings",
			"scope": [
				"comment.documentation",
				"string.quoted.docstring"
			],
			"settings": {
				"foreground": "#555555"
			}
		},

		// Language-defined words and operators
		{
			"name": "Object-like words defined by language",
			"scope": [
				"constant.language",
				"support.function.magic",
			],
			"settings": {
				"foreground": "#4677a5",
				"fontStyle": "bold italic"
			}
		},
		{
			"name": "Control flow words defined by language",
			"scope": [
				"keyword.control",
				"source.cpp keyword.operator.new",
				"source.cpp keyword.operator.delete",
				"keyword.other.using",
				"keyword.other.directive.using",
				"keyword.other.operator",
				"entity.name.operator",
				"source.python storage.type",
				"storage",


				"keyword",
				"keyword.other",
				"keyword.operator.new",
				"keyword.operator.expression",
				"keyword.operator.cast",
				"keyword.operator.sizeof",
				"keyword.operator.alignof",
				"keyword.operator.typeid",
				"keyword.operator.alignas",
				"keyword.operator.instanceof",
				"keyword.operator.logical.python",
				"keyword.operator.wordlike",
			],
			"settings": {
				//"foreground": "#7d00d1",
				//"foreground": "#1100a7",
				"foreground": "#a70083",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Math operators",
			"scope": "keyword.operator",
			"settings": {
				"foreground": "#000000",
				"fontStyle": ""
			}
		},
		{
			"name": "Literals",
			"scope": [
				"string",
				"constant",
				"constant.numeric",
			],
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"name": "Formatting",
			"scope": [
				"constant.character.format",
				"constant.character.escape"
			],
			"settings": {
				"foreground": "#0000ff",
				"fontStyle": "underline"
			}
		},
		{
			"name": "Invalid",
			"scope": "invalid",
			"settings": {
				"foreground": "#FF0000",
				"fontStyle": "strikethrough"
			}
		},

		// User-defined words and operators

		{
			"name": "Imports in languages that can't resolve them",
			"scope": [
				"meta.import storage",
				"meta.package storage"
			],
			"settings": {
				"foreground": "#000000",
				"fontStyle": ""
			}
		},
		{
			"name": "Class / Type",
			"scope": [
				"entity.name.namespace",
				"entity.name.type",
				"storage.type",
				"support.class"
			],
			"settings": {
				"foreground": "#006e00",
				"fontStyle": "bold italic"
			}
		},
		{
			"name": "Objects / Variables",
			"scope": [
				"variable",
				"entity.name",
			],
			"settings": {
				"foreground": "#4677a5",
				"fontStyle": "italic",
			}
		},
		{
			"name": "Functions",
			"scope": [
				"entity.name.function",
				"support.function",
				"support.constant.handlebars",
				"source.powershell variable.other.member",
				"entity.name.operator.custom-literal"
			],
			"settings": {
				"foreground": "#5e2cbc"
			}
		},
		{
			"name": "Constant / Enum",
			"scope": [
				"variable.other.constant",
				"variable.other.enummember"
			],
			"settings": {
				"foreground": "#47c7b0"
			}
		},

		// Markup
		{
			"name": "Markup - Underline",
			"scope": "markup.underline",
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"name": "Markup - Bold",
			"scope": "markup.bold",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup - Italic",
			"scope": "markup.italic",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "Markup - Strike",
			"scope": "markup.strikethrough",
			"settings": {
				"fontStyle": "strikethrough"
			}
		},
		{
			"name": "Markup - Heading",
			"scope": "markup.heading",
			"settings": {
				"foreground": "#0F4A85",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markdown - Line punctuation",
			"scope": [
				"punctuation.definition.quote.begin.markdown",
				"punctuation.definition.list.begin.markdown",
				"punctuation.definition.heading.markdown"
			],
			"settings": {
				"foreground": "#60adff"
			}
		},
		{
			"name": "Markup - Raw",
			"scope": "markup.inline.raw",
			"settings": {
				"foreground": "#777777",
				"fontStyle": ""
			}
		},
		{
			"name": "Markup - Link",
			"scope": "meta.link",
			"settings": {
				"foreground": "#4B83CD",
			}
		},

		// Other / Unknown
		{
			"name": "Emphasis",
			"scope": "emphasis",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "Strong",
			"scope": "strong",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"scope": "token.info-token",
			"settings": {
				"foreground": "#316BCD"
			}
		},
		{
			"scope": "token.warn-token",
			"settings": {
				"foreground": "#CD9731"
			}
		},
		{
			"scope": "token.error-token",
			"settings": {
				"foreground": "#CD3131"
			}
		},
		{
			"scope": "token.debug-token",
			"settings": {
				"foreground": "#800080"
			}
		},

		// Untested language-specific stuff
		{
			"name": "HTML: Doctype Declaration",
			"scope": [
				"meta.tag.sgml.doctype",
				"meta.tag.sgml.doctype string",
				"meta.tag.sgml.doctype entity.name.tag",
				"meta.tag.sgml punctuation.definition.tag.html"
			],
			"settings": {
				"foreground": "#AAAAAA"
			}
		},
		{
			"name": "HTML: Tags",
			"scope": [
				"meta.tag",
				"punctuation.definition.tag.html",
				"punctuation.definition.tag.begin.html",
				"punctuation.definition.tag.end.html"
			],
			"settings": {
				"foreground": "#91B3E0"
			}
		},
		{
			"name": "HTML: Tag Names",
			"scope": "entity.name.tag",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		{
			"name": "HTML: Attribute Names",
			"scope": [
				"meta.tag entity.other.attribute-name",
				"entity.other.attribute-name.html"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#91B3E0"
			}
		},
		{
			"name": "HTML: Entities",
			"scope": [
				"constant.character.entity",
				"punctuation.definition.entity"
			],
			"settings": {
				"foreground": "#AB6526"
			}
		},
		{
			"name": "CSS: Selectors",
			"scope": [
				"meta.selector",
				"meta.selector entity",
				"meta.selector entity punctuation",
				"entity.name.tag.css"
			],
			"settings": {
				"foreground": "#7A3E9D"
			}
		},
		{
			"name": "CSS: Property Names",
			"scope": [
				"meta.property-name",
				"support.type.property-name"
			],
			"settings": {
				"foreground": "#AB6526"
			}
		},
		{
			"name": "CSS: Property Values",
			"scope": [
				"meta.property-value",
				"meta.property-value constant.other",
				"support.constant.property-value"
			],
			"settings": {
				"foreground": "#448C27"
			}
		},
		{
			"name": "CSS: Important Keyword",
			"scope": "keyword.other.important",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Extra: Diff Range",
			"scope": [
				"meta.diff.range",
				"meta.diff.index",
				"meta.separator"
			],
			"settings": {
				"foreground": "#434343"
			}
		},
		{
			"name": "Extra: Diff From",
			"scope": "meta.diff.header.from-file",
			"settings": {
				"foreground": "#434343"
			}
		},
		{
			"name": "Extra: Diff To",
			"scope": "meta.diff.header.to-file",
			"settings": {
				"foreground": "#434343"
			}
		}
	]
}
